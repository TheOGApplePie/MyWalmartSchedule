<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="60dp">
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:fontFamily="@font/mmrtextb"
            android:textSize="27sp"/>
        <LinearLayout
            android:layout_below="@id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_stuff"
            android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mmrtextb"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="27sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Walmart Logo"
            android:src="@drawable/ic_walmart_spark" />
            </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/main_stuff">

            <EditText
                android:id="@+id/emailSignInEditText"
                android:hint="Email"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="16sp"
                android:fontFamily="@font/mmrtextb"
                android:background="@drawable/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginVertical="8dp"/>

            <EditText
                android:id="@+id/passwordSignInEditText"
                android:inputType="textPassword"
                android:maxLines="1"
                android:hint="Password"
                android:paddingHorizontal="16sp"
                android:fontFamily="@font/mmrtextb"
                android:background="@drawable/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_below="@id/emailSignInEditText" />

            <Button
                android:id="@+id/submitButton"
                android:text="Login"
                android:textAllCaps="false"
                android:fontFamily="@font/mmrtextb"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@drawable/login_background"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginVertical="8dp"
                android:layout_below="@id/passwordSignInEditText" />
            <TextView
                android:id="@+id/dont_have_an_account"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/submitButton"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/mmrtextb"
                android:text="Don't have an account? Tap here!"/>
            <TextView
                android:id="@+id/forgot_password"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dont_have_an_account"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/mmrtextb"
                android:text="I forgot my password"/>
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>